<div class="username-not-found">
    <h2 class="light">&ldquo;@ViewBag.Username&rdquo; not found!</h2>
    @{ Html.BeginForm("Index", "Search"); }
    <div>
        <label for="f-username">Username</label>
        <input type="text" name="username" placeholder="Search username" id="f-username" />
    </div>
    <button class="button button-blue" type="submit">Try again</button>
    @{ Html.EndForm(); }
</div>